{   
    "version": 2,
    "builds": [
        {
            "src": "api/**/*.py",
            "use": "@vercel/python"
        }
    ],
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/api/app"
        }
    ],
    "functions": {
        "api/app": {
            "includeFiles": "api/functions/**",
            "runtime": "@vercel/python"
        }
    }
}
